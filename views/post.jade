extends layout

block content
	div.row
		div(class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1")
			div= error
			h2(class="subheading") Post an article
			form(action="/post", method="POST", role="form", enctype="application/x-www-form-urlencoded")
				div.form-group
					label(for="title") Title
					input#title.form-control(name="title", type="text", required="required", placeholder="Awesome title")
				div.form-group
					label(for="slug") Slug
					input#slug.form-control(name="slug", type="text", required="required", placeholder="awesome-title")
					span.help-block This string will be used in the URL
				div.form-group
					label(for="text") Text
					textarea#text.form-control(rows="5", name="text", required="required", placeholder="Text")
				p
					button.btn.btn-primary(type="submit") Save