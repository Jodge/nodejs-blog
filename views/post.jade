extends layout
block vars
	- var jsToLoad = 'post/post.js'
block content
	div.row
		div(class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1")
			div.text-danger= error
			div.text-success= success
			h2(class="subheading") Post an article
			form(id="post-form" action="/post", method="post", role="form")
				div.form-group
					label(for="title") Title
					input#title.form-control(name="title", type="text", required="required", placeholder="Awesome title")
				div.form-group
					label(for="slug") Slug
					input#slug.form-control(name="slug", type="text", required="required", placeholder="awesome-slug")
					span.help-block This string will be used in the URL
				div.form-group
					label(for="text") Text
					textarea#text.form-control(rows="5", name="text", required="required", placeholder="Text")
				p
					button.btn.btn-primary(type="submit") Save