extend layout

block content
	div(class="row")
		div(class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1")
			div.row
				div.col-md-6
					h3(class="subheading")= user.fullname
					p
						strong Email: 
						i=user.email
				div.col-md-6
					p
						img(src="#{userImage}" alt="/img/icons/user-icon.png")
					a.btn.btn-info(href="/publish") View Your Posts