{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2015,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 2],
        "eqeqeq": "error",
        "no-var": "error",
        "prefer-const": "error"
    }
}